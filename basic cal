 <button class="btn" onclick="press('0')">0</button>
 <button class="btn" onclick="press('.')">.</button>
 <button clas="btn equal" onclick="calculate()">=</button>
 <button class="btn operation" onclick="press('+')">+</button>
 </div>
 
 <div>
 <button class="btn clear" style="width:260px" onclick="clearDisplay()">CLEAR</button>
