<script type="text/javascript">
 let display= document.getElementById("display");
 
 function press(num) {
   display.value+=num;
 }
 
 function calculate() {
  try {
   display.value=eval(display.value);
  } catch {
   display.value="error";
  }
 }
 
 function clearDisplay() {
 display.value="";
 }
</script>
